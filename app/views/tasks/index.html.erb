<h1>Task Manager</h1>

<% @tasks.each do |task|  %>
    <h3><%= link_to task.name, task_path(task) %></h3>
    <p><%= task.description %></p>
    <%= link_to "Delete this task", task_path(task), method: :delete %>
    <%= link_to 'Edit task', edit_task_path(task) %>
    <p>.....................</p>
<% end %>
<%= link_to "Add a new task", new_task_path %>
